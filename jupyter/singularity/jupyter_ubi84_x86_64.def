Bootstrap: docker
From: registry.access.redhat.com/ubi8:8.4-213

%files
  /etc/pki/entitlement /etc/pki/
  /etc/yum.repos.d/redhat.repo
  
%post
  dnf -y install hostname gcc gcc-gfortran gcc-c++ perl java vim emacs zsh git cmake numactl libcgroup boost boost-devel dnf-plugins-core wget
  dnf -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm
  dnf -y install python39-pip python39-devel python39-numpy python39-scipy python3-matplotlib libffi-devel
  dnf -y groupinstall "Development Tools"
  pip3.9 install packaging
  curl -fsSL https://rpm.nodesource.com/setup_18.x | bash -
  dnf -y install nodejs
  pip3.9 install jupyterlab
  pip3.9 uninstall -y jupyterlab
  #
  dnf clean all
  rm -f /etc/pki/entitlement/*
  rm -f /etc/yum.repos.d/redhat.repo
  